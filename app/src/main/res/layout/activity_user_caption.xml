<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.englishnary.eridev.android.englishnary.UserCaptionActivity"
    android:background="#c2dae9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/spiner"
        android:id="@+id/textView_word_find"
        android:padding="15dp"
        android:textColor="#5372fa"
        android:textSize="22dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerPalabras" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/edit"
        android:id="@+id/textView2"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:textColor="#5372fa"
        android:textSize="22dp"
        android:padding="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPalabraIntro"
        android:hint="Irony"
        android:layout_margin="10dp"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/btnBuscar"
        android:layout_gravity="center_horizontal"
        android:background="#3a7bf2"
        android:textColor="#faf6f6" />
</LinearLayout>
