                    card_view:cardPreventCornerOverlap="false"
                    card_view:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">

                    <!--fondo del cardView-->
                    <ImageView
                        android:layout_width="match_parent"
