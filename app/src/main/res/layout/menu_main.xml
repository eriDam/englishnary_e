<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="1dp"
    android:fillViewport="true"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:padding="0dp"
    android:scrollbars="horizontal|vertical">

        <!--Linear para titulo-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_letras"
            android:orientation="vertical">
        <!--Linear para titulo lessons-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#91acfc"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#0378f5">

                <TextView
                    android:id="@+id/tv_title_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left|center"
                    android:text="Búsqueda"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#f3f3f7"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sub_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Definiciones"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#f7f5f4"
                android:layout_margin="10dp" />

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewtest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >
                <!--  card_view:cardBackgroundColor="@android:color/holo_blue_light"-->
                <!--Curso 1 C++, cada card contiene 1 fondo, 1 titulo y una opción ver como subtitulo inferior
               TO DO: convertir en icono botón para acceder-->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_maps"
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="10dp"
                    card_view:cardPreventCornerOverlap="false"
                    card_view:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    card_view:cardBackgroundColor="@android:color/background_light"
                    android:padding="5dp"
                    android:layout_margin="10dp">

                    <!--fondo del cardView-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="30dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_action_event" />
                    <!--Titulo curso-->
                    <TextView
                        android:id="@+id/txt_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:padding="10dp"
                        android:text="Maps"
                        android:textColor="#ffccc9c3"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:background="#07bdfd" />
                    <!--Subtitulo ver-->
                    <TextView
                        android:id="@+id/txt_ver_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="4dp"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Ver"
                        android:textColor="#f40618"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_players"
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="10dp"
                    card_view:cardPreventCornerOverlap="false"
                    card_view:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">

                    <!--fondo del cardView-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:paddingLeft="10dp"
                        android:paddingTop="30dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_action_home" />
                    <!--Titulo curso-->
                    <TextView
                        android:id="@+id/txt_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:padding="10dp"
                        android:text="Players"
                        android:textColor="#ffccc9c3"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:background="#ff94829d" />
                    <!--Subtitulo ver-->
                    <TextView
                        android:id="@+id/txt_ver_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Ver"
                        android:textColor="#e20314"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_dark"
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="10dp"
                    card_view:cardPreventCornerOverlap="false"
                    card_view:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">

                    <!--fondo del cardView-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:paddingLeft="10dp"
                        android:paddingTop="30dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_action_home"
                        android:scaleType="center" />
                    <!--Titulo curso-->
                    <TextView
                        android:id="@+id/txt_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:padding="10dp"
                        android:text="Dark side"
                        android:textColor="#ffccc9c3"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:background="#ff3a3a3a" />
                    <!--Subtitulo ver-->
                    <TextView
                        android:id="@+id/txt_ver_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Ver"
                        android:textColor="#ef0000"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </HorizontalScrollView>
        <!--Linear para titulo lessons-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#91acfc"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#0378f5">

                <TextView
                    android:id="@+id/tv_title_lesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left|center"
                    android:text="Juego"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fcfaf8"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sub_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Trivial"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#f5f4f4"
                android:layout_margin="10dp" />

        </LinearLayout>
            <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >
                <!--  card_view:cardBackgroundColor="@android:color/holo_blue_light"-->
                <!--Curso 1 C++, cada card contiene 1 fondo, 1 titulo y una opción ver como subtitulo inferior
