                        android:scaleType="centerInside"
                        android:paddingLeft="10dp"
                        android:paddingTop="30dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_action_home" />
                    <!--Titulo curso-->
                    <TextView
                        android:id="@+id/txt_notess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:padding="10dp"
                        android:text="Players"
                        android:textColor="#ffccc9c3"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:background="#ff94829d" />
                    <!--Subtitulo ver-->
                    <TextView
                        android:id="@+id/txt_ver_notesss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="Ver"
                        android:textColor="#e20314"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_darkss"
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="10dp"
                    card_view:cardPreventCornerOverlap="false"
                    card_view:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">

                    <!--fondo del cardView-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:paddingLeft="10dp"
                        android:paddingTop="30dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_action_home"
                        android:scaleType="center" />
                    <!--Titulo curso-->
                    <TextView
                        android:id="@+id/txt_musicsss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:padding="10dp"
                        android:text="Dark side"
                        android:textColor="#ffccc9c3"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:background="#ff3a3a3a" />
